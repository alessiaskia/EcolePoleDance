@{
    ViewBag.Title = "Inscription";
}

@section ContactCSS
    {
    @Styles.Render("~/Content/contact")
}

@section ContactScript
{
    @Scripts.Render("~/bundles/additionalForContacts")
}

<script>
    $(window).load(function () {
        $().UItoTop({ easingType: 'easeOutQuart' });
    });
</script>

<!--=====================
          Content
======================-->
<section id="content">
    <div class="ic">More Website Templates at TemplateMonster.com - October 06, 2014!</div>
    <div class="container_12">
        <div class="grid_5">
            <h2 class="color1 inset__1">Inscrivez-vous</h2>
            <p class="instruction">Remplissez le formulaire avec vos coordonnées. </p>
            <p class="instruction">Vous recevrez une email de confirmation.</p>
            <p>Déjà membre de Pole is Art ? Aller à la <a href="/Account/Login" class="color1">page login</a></p>
        </div>
        <div class="grid_6 prefix_1">

            @if (ViewBag.SuccessMessage != null)
            {
                @:<div class="alert alert-success">@ViewBag.SuccessMessage</div>
            }

            @if (ViewBag.ErrorMessage != null)
            {
                @:<div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }
            <form id="contact-form" method="post">
                @Html.AntiForgeryToken()
                <div class="contact-form-loader"></div>
                <label class="first-name">
                    <input type="text" name="Prenom" placeholder="-- Prénom" required />
                </label>
                <label class="last-name">
                    <input type="text" name="Nom" placeholder="-- Nom" required />
                </label>
                <label class="email">
                    <input type="text" name="Email" placeholder="-- E-mail" required />
                </label>
                <label class="password">
                    <input type="password" name="Password" placeholder="-- Mot de passe" required />
                </label>
                <label class="confirmPassword">
                    <input type="password" name="ConfirmPassword" placeholder="-- Confirmez le mot de passe" required />

                </label>

                <div class="ta__center">
                    @*<a href="#" class="link-1" data-type="reset">Vider les champs</a>*@
                    <button class="link-1" data-type="submit">Valider</button>
                </div>

            </form>
        </div>
        <div class="clear"></div>
    </div>
</section>

