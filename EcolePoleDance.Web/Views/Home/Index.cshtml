    ViewBag.Title = "Home";
}

@section IndexCSS {
    @Styles.Render("~/Content/index")
    }

@section IndexScript{
    @Scripts.Render("~/bundles/additionalForIndex")
    }

    <section class="slider_wrapper">
        <div class="container_12">
            <div class="grid_12">
                <div id="camera_wrap" class="">
                    <div data-src="/images/slide-1.jpg" data-thumb="/images/thumb-1.jpg"></div>
                    <div data-src="/images/slide-2.jpg" data-thumb="/images/thumb-2.jpg"></div>
                    <div data-src="/images/slide-3.jpg" data-thumb="/images/thumb-3.jpg"></div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </section>
    <!--=====================
              Content
    ======================-->
    <section id="content">
        <div class="ic">More Website Templates at TemplateMonster.com - October 06, 2014!</div>
        <div class="container_12">
            <div class="grid_12">
                <img src="/images/page1_img1.jpg" alt="" class="fleft">
                <h2>L'ELEGANCE ET LA FORCE</h2>
                <div class="description-home">
                    <p>Chez <strong>Pole is Art</strong>, nous mêlons la beauté et l'élégance de la danse à l'acrobatie et le développement de la force musculaire, le tout autour d'une barre.</p>
                    <p>Il s'agit d'une discipline ouverte à tous et à toutes : peu importe l'age et le genre, vous êtes les bienvenu.es !</p>
                    <p>Aucun pré-requis physique : il ne faut pas être un athlète pour participer.</p>
                    <p>Venez danser avec nous, développez votre style personnel, <br /> tout en renforçant votre corps !</p>
                </div>
            </div>
            <div class="grid_6">
                <h3>NOTRE OFFRE</h3>
                <div class="grid_3 alpha">
                    <div class="block-1">
                        <h4 class="color1"><a href="#">Nos Cours</a></h4>
                        Nous offrons des cours de pole dance technique pour tous les niveaux, mais pas que ! Découvrez notre offre de conditionnement physique, cerceau aérien...
                        <br>
                        <a href="/Home/Cours" class="link-1">En savoir plus</a>
                    </div>
                </div>
                <div class="grid_3 omega">
                    <div class="block-1">
                        <h4 class="color1"><a href="#">Notre Equipe</a></h4>
                        Nos magnifiques professeurs viennent du monde de la danse, du cirque, du cabaret. Chacun.e a son style et méthodologie, pour vous offrir une grande variété d'émotions et vous aider à connaitre cette discipline dans toutes ses facettes !
                        <a href="/Home/Equipe" class="link-1">En savoir plus</a>
                    </div>
                </div>
                <div class="grid_3 alpha">
                    <div class="block-1">
                        <h4 class="color1"><a href="#">Nos Tarifs</a></h4>
                        Des différents types d'abonnement trimestrels sont disponibles pour vous permettre la plus grande flexibilité. Choisissez celui qui vous convient le mieux !
                        <br>
                        <a href="/Home/Tarifs" class="link-1">En savoir plus</a>
                    </div>
                </div>
                <div class="grid_3 omega">
                    <div class="block-1">
                        <h4 class="color1"><a href="#">Inscription</h4>
                        Devenez membre de Pole is Art et part d'une communauté de danseurs et danseuses passionné.es !
                        <br>
                        <a href="/Home/Inscription" class="link-1">En savoir plus</a>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="grid_5 prefix_1 gallery">
                <a href="/images/big1.jpg" class="gall_item">
                    <img src="/images/page1_img2.jpg" alt="">
                    <div class="gall_bot">
                        <div class="fa fa-camera"></div>
                    </div>
                </a>
            </div>
            <div class="clear"></div>
        </div>
    </section>
